<UserControl x:Class="AsmDude.QuickInfo.TooltipWindow2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AsmDude.QuickInfo"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="myPopup" Margin="1,1,1,1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Button x:Name="button1" Content="Calculate 1" ToolTip="Start calculation" Click="Calc_Btn_A_Click" IsCancel="True" Grid.Row="1" Grid.Column="0"/>
                <Button x:Name="button2" Content="Calculate 2" ToolTip="Start calculation" Click="Calc_Btn_B_Click" IsCancel="True" Grid.Row="1" Grid.Column="1"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
