<UserControl x:Class="AsmDude.OptionsPage.AsmDudeOptionsPageUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">
    <Grid RenderTransformOrigin="0.5,0.818" VerticalAlignment="Top">
        <ScrollViewer>
            <StackPanel>
                <Label x:Name="version_UI" Content="AsmDude version" />
                <Grid>
                    <Label Content="Flavor:" HorizontalAlignment="Left"/>
                    <RadioButton x:Name="usedAssemblerMasm_UI" GroupName="usedAssembler_UI" ToolTip="Configure AsmDude for Intel syntax MASM" Content="Intel Masm" Margin="140,5,0,0" HorizontalAlignment="Left" Width="Auto" />
                    <RadioButton x:Name="usedAssemblerNasm_UI" GroupName="usedAssembler_UI" ToolTip="Configure AsmDude for Intel syntax NASM" Content="Intel Nasm" Margin="240,5,0,0" HorizontalAlignment="Left" Width="Auto" />
                    <RadioButton x:Name="usedAssemblerAtt_UI" GroupName="usedAssembler_UI" ToolTip="Configure AsmDude for AT&amp;T syntax NASM" Content="AT&amp;T Nasm" Margin="340,5,0,0" HorizontalAlignment="Left" Width="Auto" />
                </Grid>
                <GroupBox Header="Syntax Highlighting" >
                    <Grid Margin="0,2,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="55"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <CheckBox x:Name="SyntaxHighlighting_On_UI" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" ToolTip="Syntax highlighting enabled" Content="Enable syntax highlighting" VerticalAlignment="Center" Width="Auto" />

                        <Label Content="Mnemonic:" Grid.Column="0" Grid.Row="1" />
                        <CheckBox x:Name="ColorMnemonic_Italic_UI" Grid.Column="1" Grid.Row="1" Content="Italic" VerticalAlignment="Center" Width="Auto" />
                        <xctk:ColorPicker x:Name="ColorMnemonic_UI" Grid.Column="2" Grid.Row="1" DisplayColorAndName="True" ToolTip="Syntax highlighting color for mnemonics."/>

                        <Label Content="Register:" Grid.Column="0" Grid.Row="2" />
                        <CheckBox x:Name="ColorRegister_Italic_UI" Grid.Column="1" Grid.Row="2" Content="Italic" VerticalAlignment="Center" Width="Auto" />
                        <xctk:ColorPicker x:Name="ColorRegister_UI" Grid.Column="2" Grid.Row="2"  DisplayColorAndName="True" ToolTip="Syntax highlighting color for registers"/>

                        <Label Content="Remark:" Grid.Column="0" Grid.Row="3" />
                        <CheckBox x:Name="ColorRemark_Italic_UI" Grid.Column="1" Grid.Row="3" Content="Italic" VerticalAlignment="Center" Width="Auto" />
                        <xctk:ColorPicker x:Name="ColorRemark_UI" Grid.Column="2" Grid.Row="3" DisplayColorAndName="True" ToolTip="Syntax highlighting color for remarks"/>

                        <Label Content="Directive:" Grid.Column="0" Grid.Row="4" />
                        <CheckBox x:Name="ColorDirective_Italic_UI" Grid.Column="1" Grid.Row="4" Content="Italic" VerticalAlignment="Center" Width="Auto" />
                        <xctk:ColorPicker x:Name="ColorDirective_UI" Grid.Column="2" Grid.Row="4" DisplayColorAndName="True" ToolTip="Syntax highlighting color for compiler directives"/>

                        <Label Content="Constant:" Grid.Column="0" Grid.Row="5" />
                        <CheckBox x:Name="ColorConstant_Italic_UI" Grid.Column="1" Grid.Row="5" Content="Italic" VerticalAlignment="Center" Width="Auto" />
                        <xctk:ColorPicker x:Name="ColorConstant_UI" Grid.Column="2" Grid.Row="5" DisplayColorAndName="True" ToolTip="Syntax highlighting color for constants"/>

                        <Label Content="Jump:" Grid.Column="0" Grid.Row="6" />
                        <CheckBox x:Name="ColorJump_Italic_UI" Grid.Column="1" Grid.Row="6" Content="Italic" VerticalAlignment="Center" Width="Auto" />
                        <xctk:ColorPicker x:Name="ColorJump_UI" Grid.Column="2" Grid.Row="6" DisplayColorAndName="True" ToolTip="Syntax highlighting color for jump mnemonics"/>

                        <Label Content="Label:" Grid.Column="0" Grid.Row="7" />
                        <CheckBox x:Name="ColorLabel_Italic_UI" Grid.Column="1" Grid.Row="7" Content="Italic" VerticalAlignment="Center" Width="Auto" />
                        <xctk:ColorPicker x:Name="ColorLabel_UI" Grid.Column="2" Grid.Row="7" DisplayColorAndName="True" ToolTip="Syntax highlighting color for labels"/>

                        <Label Content="Misc:"  Grid.Column="0" Grid.Row="8" />
                        <CheckBox x:Name="ColorMisc_Italic_UI" Grid.Column="1" Grid.Row="8" Content="Italic" VerticalAlignment="Center" Width="Auto" />
                        <xctk:ColorPicker x:Name="ColorMisc_UI" Grid.Column="2" Grid.Row="8" DisplayColorAndName="True" ToolTip="Syntax highlighting color for misc"/>

                        <Label Content="User defined 1:" Grid.Column="0" Grid.Row="9" />
                        <CheckBox x:Name="ColorUserDefined1_Italic_UI" Grid.Column="1" Grid.Row="9" Content="Italic" VerticalAlignment="Center" Width="Auto" />
                        <xctk:ColorPicker x:Name="ColorUserDefined1_UI" Grid.Column="2" Grid.Row="9" DisplayColorAndName="True" ToolTip="Syntax highlighting color for user defined 1. Locate AsmDudeData.xml and add your macro names."/>

                        <Label Content="User defined 2:" Grid.Column="0" Grid.Row="10" />
                        <CheckBox x:Name="ColorUserDefined2_Italic_UI" Grid.Column="1" Grid.Row="10" Content="Italic" VerticalAlignment="Center" Width="Auto" />
                        <xctk:ColorPicker x:Name="ColorUserDefined2_UI" Grid.Column="2" Grid.Row="10" DisplayColorAndName="True" ToolTip="Syntax highlighting color for user defined 2. Locate AsmDudeData.xml and add your macro names."/>

                        <Label Content="User defined 3:" Grid.Column="0" Grid.Row="11" />
                        <CheckBox x:Name="ColorUserDefined3_Italic_UI" Grid.Column="1" Grid.Row="11" Content="Italic" VerticalAlignment="Center" Width="Auto" />
                        <xctk:ColorPicker x:Name="ColorUserDefined3_UI" Grid.Column="2" Grid.Row="11" DisplayColorAndName="True" ToolTip="Syntax highlighting color for user defined 3. Locate AsmDudeData.xml and add your macro names."/>

                        <TextBlock TextWrapping="WrapWithOverflow" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="12" >
                        <Run Text="Note: go to Tools&gt;Options&gt;Environment&gt;Fonts and Colors&gt;Text Editor to edit other properties of these keywords such as font families. If you changed the color of these keywords in 'Fonts and Colors' remember to change them back to 'Default' otherwise the above color asignments may not work."/>
                        </TextBlock>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Documentation" >
                    <Grid Margin="0,2,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                        </Grid.RowDefinitions>

                        <CheckBox x:Name="AsmDoc_On_UI" Grid.Column="0" Grid.Row="0" ToolTip="Assembly documentation enabled" Content="Enable documentation" VerticalAlignment="Center"/>
                        <Label Content="Documentation URL:" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"/>
                        <TextBox x:Name="AsmDoc_Url_UI" Grid.Column="1" Grid.Row="1" ToolTip="URL to the documentation. E.g. https://github.com/HJLebbink/asm-dude/wiki" TextWrapping="Wrap" Text="https://github.com/HJLebbink/asm-dude/wiki" Height="26" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Folding" >
                    <Grid Margin="0,2,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                        </Grid.RowDefinitions>

                        <CheckBox x:Name="CodeFolding_On_UI" Grid.Column="0" Grid.Row="0" ToolTip="Code folding enabled" Content="Enable code folding" VerticalAlignment="Center" />
                        <CheckBox x:Name="CodeFolding_IsDefaultCollaped_UI" Grid.Column="1" Grid.Row="0" ToolTip="Whether folding regions are collapsed by default" Content="Default collapsed" VerticalAlignment="Center" />

                        <Label Content="Start tag:" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" />
                        <TextBox x:Name="CodeFolding_BeginTag_UI" Grid.Column="1" Grid.Row="1" ToolTip="The characters that start the outlining region. E.g. #region." Height="26" VerticalAlignment="Center" VerticalContentAlignment="Center" />

                        <Label Content="End tag:" Grid.Column="0" Grid.Row="2" />
                        <TextBox x:Name="CodeFolding_EndTag_UI" Grid.Column="1" Grid.Row="2" ToolTip="The characters that end the outlining region. E.g. #endregion." Height="26" VerticalAlignment="Center" VerticalContentAlignment="Center" />

                        <TextBlock TextWrapping="WrapWithOverflow" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" Text="Note: place folding tags in a remark in order not to offend your assembler. For example, use: ;#region" VerticalAlignment="Center" />
                    </Grid>
                </GroupBox>
                <GroupBox Header="Keyword Highlighting" >
                    <Grid Margin="0,2,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                        </Grid.RowDefinitions>

                        <CheckBox x:Name="KeywordHighlighting_BackgroundColor_On_UI" Grid.Column="0" Grid.Row="0" ToolTip="Background color for highlighting enabled" Content="Use background color" Margin="0,4,0,4" HorizontalAlignment="Left" Width="Auto" />
                        <xctk:ColorPicker x:Name="KeywordHighling_BackgroundColor_UI" Grid.Column="1" Grid.Row="0" IsEnabled="True" DisplayColorAndName="True" ToolTip="The background color for keyword highlighting" />

                        <CheckBox x:Name="KeywordHighlighting_BorderColor_On_UI" Grid.Column="0" Grid.Row="1" ToolTip="Border color for highlighting enabled" Content="Use border color" Margin="0,4,0,4" HorizontalAlignment="Left" Width="Auto" />
                        <xctk:ColorPicker x:Name="KeywordHighling_BorderColor_UI" Grid.Column="1" Grid.Row="1" IsEnabled="True" DisplayColorAndName="True" ToolTip="The font color for keyword highlighting"  />
                    </Grid>
                </GroupBox>
                <GroupBox Header="Latency and Throughput Information" >
                    <Grid Margin="0,2,0,0">
                        <StackPanel>
                            <!--<CheckBox x:Name="PerformanceInfo_SandyBridge_UI" ToolTip="Show performance information for Sandy Bridge in instruction QuickInfo tooltips" Content="Sandy Bridge (Intel 2nd gen Core)" Margin="0,4,0,2" HorizontalAlignment="Left" Width="Auto" />
                            -->
                            <CheckBox x:Name="PerformanceInfo_IvyBridge_UI" ToolTip="Show performance information for Ivy Bridge in instruction QuickInfo tooltips" Content="Ivy Bridge (Intel 3nd gen Core)" Margin="0,2,0,2" HorizontalAlignment="Left" Width="Auto" />
                            <CheckBox x:Name="PerformanceInfo_Haswell_UI" ToolTip="Show performance information for Haswell in instruction QuickInfo tooltips" Content="Haswell (Intel 4nd gen Core)" Margin="0,2,0,2" HorizontalAlignment="Left" Width="Auto" />
                            <CheckBox x:Name="PerformanceInfo_Broadwell_UI" ToolTip="Show performance information for Broadwell in instruction QuickInfo tooltips" Content="Broadwell (Intel 5nd gen Core)" Margin="0,2,0,2" HorizontalAlignment="Left" Width="Auto" />
                            <CheckBox x:Name="PerformanceInfo_Skylake_UI" ToolTip="Show performance information for Skylake in instruction QuickInfo tooltips" Content="Skylake (Intel 6nd gen Core)" Margin="0,2,0,4" HorizontalAlignment="Left" Width="Auto" />
                            <!--<CheckBox x:Name="PerformanceInfo_KnightsLanding_UI" ToolTip="Show performance information for Knights Landing in instruction QuickInfo tooltips" Content="Knights Landing (Intel Xeon Phi)" Margin="0,2,0,4" />
                            -->
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Intellisense" >
                    <Grid Margin="0,2,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                        </Grid.RowDefinitions>

                        <CheckBox x:Name="Intellisense_Code_Completion_On_UI" Grid.Column="0" Grid.Row="0" Content="Enable code completion" ToolTip="Code completion enabled" Margin="0,4,0,2" HorizontalAlignment="Left" Width="Auto" />
                        <CheckBox x:Name="Intellisense_Signature_Help_On_UI" Grid.Column="0" Grid.Row="1" Content="Enable signature help" ToolTip="Signature help enabled" Margin="0,2,0,2" HorizontalAlignment="Left" Width="Auto" />
                        <CheckBox x:Name="Intellisense_Label_Analysis_On_UI" Grid.Column="0" Grid.Row="2" Content="Enable label analysis" ToolTip="Label analysis enabled. Needed for code completions of labels, tooltip info of labels, missing label warnings, clashing label warnings." Margin="0,2,0,4" HorizontalAlignment="Left" Width="Auto" />

                        <Label Content="Undefined Labels:" Grid.Column="0" Grid.Row="3"/>
                        <CheckBox x:Name="Intellisense_Show_Undefined_Labels_UI"  Grid.Column="1" Grid.Row="3" Content="Show in error list" ToolTip="Show undefined labels in error list" VerticalAlignment="Center" HorizontalAlignment="Left" Width="Auto" />
                        <CheckBox x:Name="Intellisense_Decorate_Undefined_Labels_UI"  Grid.Column="2" Grid.Row="3" Content="Decorate with Squiggle" ToolTip="Decorate undefined labels with error squiggles" VerticalAlignment="Center" HorizontalAlignment="Left" Width="Auto" />

                        <Label Content="Clashing Labels:" Grid.Column="0" Grid.Row="4" />
                        <CheckBox x:Name="Intellisense_Show_Clashing_Labels_UI"  Grid.Column="1" Grid.Row="4" Content="Show in error list" ToolTip="Show clashing labels in error list"  VerticalAlignment="Center" HorizontalAlignment="Left" Width="Auto" />
                        <CheckBox x:Name="Intellisense_Decorate_Clashing_Labels_UI" Grid.Column="2" Grid.Row="4" Content="Decorate with Squiggle" ToolTip="Decorate clashing labels with error squiggle" VerticalAlignment="Center" HorizontalAlignment="Left" Width="Auto" />

                        <Label Content="Undefined Includes:" Grid.Column="0" Grid.Row="5" />
                        <CheckBox x:Name="Intellisense_Show_Undefined_Includes_UI" Grid.Column="1" Grid.Row="5" Content="Show in error list" ToolTip="Show undefined includes in error list" VerticalAlignment="Center" HorizontalAlignment="Left" Width="Auto" />
                        <CheckBox x:Name="Intellisense_Decorate_Undefined_Includes_UI" Grid.Column="2" Grid.Row="5" Content="Decorate with Squiggle" ToolTip="Decorate undefined includes with error squiggle" VerticalAlignment="Center" HorizontalAlignment="Left" Width="Auto" />
                    </Grid>
                </GroupBox>
                <GroupBox Header="Assembly Simulator (Warning: Experimental, only supported in AsmDude 2.0)" >
                    <Grid Margin="0,2,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                            <RowDefinition Height="26" />
                        </Grid.RowDefinitions>

                        <TextBlock          Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" TextWrapping="WrapWithOverflow" Text="Note: the simulator does not understand MASM or NASM, thus no 'MOV VAR, 10'. Jumping based on register content is also not supported, thus no 'JMP RAX'." VerticalAlignment="Center" Width="Auto"/>
                        <CheckBox           Grid.Column="0" Grid.Row="1" x:Name="AsmSim_On_UI" Content="Enable assembly simulator" ToolTip="Enamble the assembly simulator" VerticalAlignment="Center" Width="Auto"/>
                        <Label              Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Content="Timeout for Z3 in milliseconds" ToolTip="The number of milliseconds the Z3 theorem prover may spend on determining one single bit of a register. 200 is sensible: it would need (worst case) 12.8 sec to determine a 64-bit register. 0 means no timeout (not recommended!)" VerticalAlignment="Center" Width="Auto"/>
                        <xctk:IntegerUpDown Grid.Column="0" Grid.Row="2" x:Name="AsmSim_Z3_Timeout_MS_UI" DefaultValue="100" Height="26" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="Auto"/>
                        <Label              Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Content="Number of worker threads" ToolTip="The number of worker threads AsmSim may use to crunch on your assembly." VerticalAlignment="Center" Width="Auto"/>
                        <xctk:IntegerUpDown Grid.Column="0" Grid.Row="3" x:Name="AsmSim_Number_Of_Threads_UI" DefaultValue="4" Height="26" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="Auto"/>
                        <Label              Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2" Content="Number of steps the simulator considers" ToolTip="The number of steps (lines) that the simulator looks in the past to determine register, flags and memory state." VerticalAlignment="Center" Width="Auto"/>
                        <xctk:IntegerUpDown Grid.Column="0" Grid.Row="4" x:Name="AsmSim_Number_Of_Steps_UI" DefaultValue="6" Height="26" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="Auto"/>

                        <CheckBox Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="3" x:Name="AsmSim_64_Bits_UI" Content="Use 64-bits mode (32-bits mode otherwise)" ToolTip="Use 64-bits mode (32-bits mode otherwise)" VerticalAlignment="Center" Width="Auto"/>
                        <CheckBox Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="3" x:Name="AsmSim_Use_In_Code_Completion_UI" Content="Use known register values in code completions" ToolTip="Use known register values in code completions" VerticalAlignment="Center" Width="Auto"/>

                        <Label    Grid.Column="0" Grid.Row="7" Content="Syntax Errors:" VerticalAlignment="Center" Width="Auto"/>
                        <CheckBox Grid.Column="1" Grid.Row="7" x:Name="AsmSim_Shown_Syntax_Errors_UI" Content="Show in error list" ToolTip="Show syntax errors found while parsing in error list" VerticalAlignment="Center" Width="Auto"/>
                        <CheckBox Grid.Column="2" Grid.Row="7" x:Name="AsmSim_Decorate_Syntax_Errors_UI" Content="Decorate with squiggles" ToolTip="Decorate syntax errors found while parsing with squiggles" VerticalAlignment="Center" Width="Auto"/>

                        <Label    Grid.Column="0" Grid.Row="8" Content="Usage of Undefined:" Width="Auto"/>
                        <CheckBox Grid.Column="1" Grid.Row="8" x:Name="AsmSim_Show_Usage_Of_Undefined_UI" Content="Show in error list" ToolTip="Show usage of undefined values in error list" VerticalAlignment="Center" Width="Auto"/>
                        <CheckBox Grid.Column="2" Grid.Row="8" x:Name="AsmSim_Decorate_Usage_Of_Undefined_UI" Content="Decorate with squiggles" ToolTip="Decorate usage of undefined values with squiggles" VerticalAlignment="Center" Width="Auto"/>

                        <Label    Grid.Column="0" Grid.Row="9" Content="Redundant Instructions:" Width="Auto"/>
                        <CheckBox Grid.Column="1" Grid.Row="9" x:Name="AsmSim_Show_Redundant_Instructions_UI" Content="Show in error list" ToolTip="Show redundant instructions in error list" VerticalAlignment="Center" Width="Auto"/>
                        <CheckBox Grid.Column="2" Grid.Row="9" x:Name="AsmSim_Decorate_Redundant_Instructions_UI" Content="Decorate with squiggles" ToolTip="Decorate redundant instructions with squiggles" VerticalAlignment="Center" Width="Auto"/>

                        <Label    Grid.Column="0" Grid.Row="10" Content="Unreachable Instructions:" Width="Auto"/>
                        <CheckBox Grid.Column="1" Grid.Row="10" x:Name="AsmSim_Show_Unreachable_Instructions_UI" Content="Show in error list" ToolTip="Show unreachable instructions in error list" VerticalAlignment="Center" Width="Auto"/>
                        <CheckBox Grid.Column="2" Grid.Row="10" x:Name="AsmSim_Decorate_Unreachable_Instructions_UI" Content="Decorate with squiggles" ToolTip="Decorate unreachable instructions with squiggles" VerticalAlignment="Center" Width="Auto"/>

                        <Label    Grid.Column="0" Grid.Row="11" Content="Known Registers:" Width="Auto"/>
                        <CheckBox Grid.Column="2" Grid.Row="11" x:Name="AsmSim_Decorate_Registers_UI" Content="Decorate with squiggles" ToolTip="Decorate registers with known values with squiggles" VerticalAlignment="Center" Width="Auto"/>

                        <Label    Grid.Column="0" Grid.Row="12" Content="Unimplemented Instructions:" Width="Auto"/>
                        <CheckBox Grid.Column="2" Grid.Row="12" x:Name="AsmSim_Decorate_Unimplemented_UI" Content="Decorate with squiggles" ToolTip="Decorate instructions that are not (yet) implemented with squiggles" VerticalAlignment="Center" Width="Auto"/>

                        <Label    Grid.Column="0" Grid.Row="13" Content="Assume Pragma:" HorizontalAlignment="Left" Width="Auto"/>
                        <TextBox  Grid.Column="1" Grid.Row="13" Grid.ColumnSpan="2" x:Name="AsmSim_Pragma_Assume_UI" ToolTip="The characters used to instruct the asm simulator to execute instructions. E.g. '#pragma assume mov al, 0001_0001b' to set al the value 00010001b." Height="26" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="Auto"/>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Architectures (used for Code Completion and Signature Help)" >
                    <StackPanel>
                        <GroupBox Header="Processors">
                            <Grid>
                                <StackPanel>
                                    <CheckBox x:Name="UseArch_8086_UI" Content="8086" Margin="0,4,0,2" HorizontalAlignment="Left" Width="Auto" />
                                    <CheckBox x:Name="UseArch_186_UI" Content="186" Margin="0,2,0,2" HorizontalAlignment="Left" Width="Auto" />
                                    <CheckBox x:Name="UseArch_286_UI" Content="286" Margin="0,2,0,2" HorizontalAlignment="Left" Width="Auto" />
                                    <CheckBox x:Name="useArch_386_UI" Content="386" Margin="0,2,0,2" HorizontalAlignment="Left" Width="Auto" />
                                    <CheckBox x:Name="useArch_486_UI" Content="486" Margin="0,2,0,2" HorizontalAlignment="Left" Width="Auto" />
                                    <CheckBox x:Name="useArch_PENT_UI" Content="PENT" Margin="0,2,0,2" HorizontalAlignment="Left" Width="Auto" />
                                    <CheckBox x:Name="useArch_P6_UI" Content="P6" Margin="0,2,0,2" HorizontalAlignment="Left" Width="Auto" />
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="SIMD" >
                            <StackPanel>
                                <GroupBox Header="Streaming SIMD Extensions">
                                    <StackPanel>
                                        <CheckBox x:Name="useArch_MMX_UI" Content="MMX" Margin="0,4,0,2" HorizontalAlignment="Left" Width="Auto" />
                                        <CheckBox x:Name="useArch_SSE_UI" Content="SSE" Margin="0,2,0,2" HorizontalAlignment="Left" Width="Auto" />
                                        <CheckBox x:Name="useArch_SSE2_UI" Content="SSE2" Margin="0,2,0,2" HorizontalAlignment="Left" Width="Auto" />
                                        <CheckBox x:Name="useArch_SSE3_UI" Content="SSE3" Margin="0,2,0,2" HorizontalAlignment="Left" Width="Auto" />
                                        <CheckBox x:Name="useArch_SSSE3_UI" Content="SSSE3" Margin="0,2,0,2" HorizontalAlignment="Left" Width="Auto" />
                                        <CheckBox x:Name="useArch_SSE41_UI" Content="SSE4.1" Margin="0,2,0,2" HorizontalAlignment="Left" Width="Auto" />
                                        <CheckBox x:Name="useArch_SSE42_UI" Content="SSE4.2" Margin="0,2,0,2" HorizontalAlignment="Left" Width="Auto" />
                                        <CheckBox x:Name="useArch_SSE4A_UI" Content="SSE4A - AMD" Margin="0,2,0,2" HorizontalAlignment="Left" Width="Auto" />
                                        <CheckBox x:Name="useArch_SSE5_UI" Content="SSE5 - AMD" Margin="0,2,0,2" HorizontalAlignment="Left" Width="Auto" />
                                    </StackPanel>
                                </GroupBox>
                                <GroupBox Header="Advanced Vector Extensions">
                                    <StackPanel>
                                        <CheckBox x:Name="useArch_AVX_UI" Content="AVX" Margin="0,2,0,2" HorizontalAlignment="Left" Width="Auto" />
                                        <CheckBox x:Name="useArch_AVX2_UI" Content="AVX2" Margin="0,2,0,2" HorizontalAlignment="Left" Width="Auto" />

                                        <GroupBox Header="AVX512">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="60"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="2*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
